{
	"$schema": "https://raw.githubusercontent.com/invoiceradar/plugins/main/schema.json",
	"id": "tradetracker-publisher",
	"name": "TradeTracker Publisher",
	"description": "Tradedoubler is a global affiliate plattform. This plugin allows you to download invoices from your Tradedoubler publisher account.",
	"homepage": "https://tradetracker.com",
	"note": "Multiple Countries, Ids missing",
	"configSchema": {},
	"checkAuth": [
		{
			"action": "navigate",
			"url": "https://affiliate.tradetracker.com"
		},
		{
			"action": "checkElementExists",
			"selector": ".logout"
		}
	],
	"startAuth": [
		{
			"action": "navigate",
			"url": "https://affiliate.tradetracker.com/user/login"
		},
		{
			"action": "waitForElement",
			"selector": ".logout",
			"timeout": 120000
		}
	],
	"getDocuments": [
		{
			"action": "navigate",
			"url": "https://publishers.tradedoubler.com/en/publisher/payments/?limit=100"
		},
		{
			"action": "extractAll",
			"selector": "table.payment_index tbody tr",
			"variable": "invoice",
			"fields": {
				"id": {
					"selector": "td:nth-child(2)"
				},
				"date": {
					"selector": "td:nth-child(3)"
				},
				"total": {
					"selector": "td:nth-child(4)"
				},
				"url": {
					"selector": "a[title='Download']",
					"attribute": "href"
				}
			},
			"forEach": [
				{
					"action": "downloadPdf",
					"url": "https://publishers.tradedoubler.com{{invoice.url}}",
					"document": {
						"type": "outgoing_invoice",
						"id": "{{invoice.id}}",
						"date": "{{invoice.date}}",
						"total": "{{invoice.total}}"
					}
				}
			]
		}
	]
}
